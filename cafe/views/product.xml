<odoo>
    <data>
        <!--        drink1-->
        <record id="cafe_drink_action" model="ir.actions.act_window">
            <field name="name">cafe.drink</field>
            <field name="res_model">cafe.drink</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="xml">
                <p class="o_view_nocontent_smiling_face">
                    Create drink
                </p>
            </field>
        </record>

        <record id="cafe_drink_form" model="ir.ui.view">
            <field name="name">cafe.drink.form</field>
            <field name="model">cafe.drink</field>
            <field name="arch" type="xml">
                <form string="drink">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="cafe_drink_tree" model="ir.ui.view">
            <field name="name">cafe.drink.tree</field>
            <field name="model">cafe.drink</field>
            <field name="arch" type="xml">
                <tree string="drink">
                    <field name="name"/>
                </tree>
            </field>
        </record>


    </data>
</odoo>